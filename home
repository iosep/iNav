			function clean(text){
		      	var text = text.toLowerCase();
		      	text = text.replace(/[á]/, 'a');
				text = text.replace(/[é]/, 'e');
				text = text.replace(/[í]/, 'i');
				text = text.replace(/[ó]/, 'o');
				text = text.replace(/[ú]/, 'u');
				text = text.replace(/[ñ]/, 'n');
				return text;}
	        function chkimg(s,g,b){
	        	var img = new Image();
	        	img.onerror = b;
	        	img.onload = g;
	        	img.src = s;}
	        function lookup(){
	        	var search = 'img/' + clean(document.getElementById('text').value) + '.png';
	        	if (search=='img/.png') document.getElementById('img').src = 'img/base.png';
	        	else chkimg(search, 
	        			function good(){document.getElementById('img').src = search;}, 
	        			function bad(){document.getElementById('img').src = 'img/noe.png';});}
	        function help(){document.getElementById('img').src = 'img/help.png';}
	        function about(){document.getElementById('img').src = 'img/about.png';}</script>
