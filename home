		<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
		<title>iNav</title>
		<script>
			function clean(text)
			{
		      	var text = text.toLowerCase();
		      	text = text.replace(/[á]/, 'a');
				text = text.replace(/[é]/, 'e');
				text = text.replace(/[í]/, 'i');
				text = text.replace(/[ó]/, 'o');
				text = text.replace(/[ú]/, 'u');
				text = text.replace(/[ñ]/, 'n');
				return text;
			}
	        function chkimg(s,g,b)
	        {
	        	var img = new Image();
	        	img.onerror = b;
	        	img.onload = g;
	        	img.src = s;
	        }
	        function lookup()
	        {
	        	var search = 'img/' + clean(document.getElementById('text').value) + '.png';
	        	chkimg(search, function good(){document.getElementById('img').src = search;}, function bad(){document.getElementById('img').src = 'img/noe.png';});
	        }
		</script>
	</head>
	<body>
		<div align="center"><img id="logo" alt="iNav" src="img/iNavLogo.png" width="160"/></div>
	    <div align="center" style="font-family:verdana; font-size:100%">
	        <table>
	            <tr><td colspan="2" align="center">¿Dónde quieres llegar?</td></tr>
	            <tr>
	                <td align="center"><input id="text" type="text" name="txtSala" /></td>
	                <td align="center"><a href="#" onclick="lookup()"><img src="img/search.png" border="0" /></a></td>
	            </tr>
	        </table>
